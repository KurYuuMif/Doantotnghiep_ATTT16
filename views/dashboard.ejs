<h2>Chào mừng bạn!</h2>

<nav>
  <a href="/settings">Cài đặt tài khoản </a> |
  <a href="/logout">Đăng xuất</a>
</nav>

<hr>

<form method="POST" action="/upload" enctype="multipart/form-data">
  <input type="file" name="file" required />
  <button>Tải lên</button>
</form>

<h3>File đã tải lên</h3>

<ul>
  <% if (files.length === 0) { %>
    <li>Chưa có file nào</li>
  <% } else { %>
    <% files.forEach(f => { %>
      <li>
        <%= f.name %>
        - <a href="/download/<%= f.path %>">Tải xuống</a>
        - <form action="/delete/<%= f.id %>" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Bạn có chắc muốn xóa file này?')">Xóa</button>
          </form>
      </li>
    <% }) %>
  <% } %>
</ul>